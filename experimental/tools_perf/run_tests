import os
import sys

ROOT_PATH = os.path.abspath(os.path.dirname(__file__))
CATAPULT_PATH = os.path.normpath(os.path.join(ROOT_PATH, '..', '..'))
PY_UTILS_PATH = os.path.join(CATAPULT_PATH, 'common', 'py_utils')
TRACING_PATH = os.path.join(CATAPULT_PATH, 'tracing')
MOCK_PATH = os.path.join(CATAPULT_PATH, 'third_party', 'mock')

sys.path.append(CATAPULT_PATH)
from catapult_build import run_with_typ


def main():
  return run_with_typ.Run(top_level_dir=ROOT_PATH, path=[
      PY_UTILS_PATH,
      TRACING_PATH,
      MOCK_PATH,
  ])


if __name__ == '__main__':
  sys.exit(main())
